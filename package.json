{
  "name": "react-web-tabs",
  "version": "0.2.0",
  "description": "Modular and accessible React tabs component",
  "main": "dist/react-web-tabs.js",
  "module": "es/index.js",
  "files": [
    "dist",
    "es",
    "index.js",
    "Tab.js",
    "TabList.js",
    "TabPanel.js",
    "Tabs.js",
    "TabProvider.js"
  ],
  "author": "Marcus Lindfeldt",
  "homepage": "https://github.com/marcuslindfeldt/react-web-tabs",
  "bugs": {
    "url": "https://github.com/marcuslindfeldt/react-web-tabs/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcuslindfeldt/react-web-tabs.git"
  },
  "keywords": [
    "react",
    "tabs",
    "a11y"
  ],
  "license": "MIT",
  "jest": {
    "coverageReporters": [
      "lcov",
      "text"
    ]
  },
  "scripts": {
    "prepublish": "yarn run clean && yarn run lint && yarn run test && yarn run build",
    "clean": "rimraf dist es coverage",
    "build": "yarn run build:es && yarn build:commonjs && yarn run build:umd && yarn run build:umd:min",
    "build:es": "babel src -d es --ignore __tests__",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src -d . --ignore __tests__",
    "build:umd": "cross-env BABEL_ENV=production webpack",
    "build:umd:min": "cross-env NODE_ENV=production webpack -p",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:travis": "yarn run test:coverage && cat coverage/lcov.info | coveralls",
    "lint": "eslint ."
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.1",
    "babel-preset-env": "^1.2.2",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "coveralls": "^2.12.0",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2 || ^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "jest": "^19.0.2",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-test-renderer": "^15.4.2",
    "rimraf": "^2.6.1",
    "webpack": "^2.3.1"
  },
  "peerDependencies": {
    "react": "^15.4.2"
  }
}
